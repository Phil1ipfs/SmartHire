# SmartHire Environment Variables
# Copy this file to .env and update with your actual values

# Application Secret Key (generate with: python3 -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-super-secret-random-key-change-this

# Database Connection
# For Render PostgreSQL (production):
DATABASE_URL=postgresql://user:password@host:5432/database

# For local MySQL (development):
# DATABASE_URL=mysql+pymysql://root:@localhost/smarthire

# Email Configuration (Gmail)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password

# Flask Environment
FLASK_ENV=production
# FLASK_ENV=development  # Use this for local development